<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.HomeActivity"
        >

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="@android:color/white"
            android:padding="@dimen/default_margin"
            >

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Vitor"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_host_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="@dimen/score_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_current_host_points_label"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_host_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="@dimen/score_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_current_host_games_label"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_host_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="@dimen/score_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_current_host_sets_label"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_host_points_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/points"
                android:textSize="@dimen/label_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_current_host_name"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_host_games_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/games"
                android:textSize="@dimen/label_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_current_host_points_label"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_host_sets_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/sets"
                android:textSize="@dimen/label_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_current_host_games_label"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_guest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Besta"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_guest_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="@dimen/score_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_current_host_points_label"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_guest_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="@dimen/score_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_current_host_games_label"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_current_guest_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="@dimen/score_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_current_host_sets_label"
                />

    </android.support.constraint.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_home_resume_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar Partida"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_home_start_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Partida"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_home_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HistÃ³rico de Partidas"
            />

</LinearLayout>
