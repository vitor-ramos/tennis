<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cd_item_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1:29"
                />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_current_finish"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/finish"
                app:layout_constraintBottom_toTopOf="@id/fl_current_divider_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        <FrameLayout
                android:id="@+id/fl_current_divider_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:background="#CCC"
                app:layout_constraintTop_toBottomOf="@id/tv_current_duration"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_current_divider_top"
                tools:text="VocÃª"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_guest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_current_divider_top"
                tools:text="Convidado"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_host_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_current_host_name"
                tools:text="0"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_points_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/points"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_current_host_points"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_guest_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_current_host_points"
                tools:text="0"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_host_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_current_host_points"
                tools:text="0"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_games_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/games"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_current_host_games"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_guest_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_current_host_games"
                tools:text="0"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_host_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_current_host_games"
                tools:text="0"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_sets_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/sets"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_current_host_sets"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_guest_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_current_host_sets"
                tools:text="0"
                />

        <FrameLayout
                android:id="@+id/fl_current_divider_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:background="#CCC"
                app:layout_constraintTop_toBottomOf="@id/tv_current_host_sets"
                />

        <FrameLayout
                android:id="@+id/fl_current_divider_center"
                android:layout_width="1dp"
                android:layout_height="56dp"
                android:background="#CCC"
                android:layout_marginBottom="@dimen/default_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/fl_current_divider_bottom"
                />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_current_host_add_point"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/click_to_add_point"
                app:layout_constraintBottom_toBottomOf="@id/fl_current_divider_center"
                app:layout_constraintEnd_toStartOf="@id/fl_current_divider_center"
                app:layout_constraintStart_toStartOf="@id/fl_current_divider_bottom"
                app:layout_constraintTop_toBottomOf="@id/fl_current_divider_bottom"
            />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_current_guest_add_point"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/click_to_add_point"
                app:layout_constraintBottom_toBottomOf="@id/fl_current_divider_center"
                app:layout_constraintEnd_toEndOf="@id/fl_current_divider_bottom"
                app:layout_constraintStart_toEndOf="@id/fl_current_divider_center"
                app:layout_constraintTop_toBottomOf="@id/fl_current_divider_bottom"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
